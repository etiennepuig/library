<p id="notice"><%= notice %></p>
<%= flash[:alert]%>
<%=form_tag books_path, :method => 'get' do%>
<p>
  <%= text_field_tag :search, params[:search], placeholder: "Search title", class: "form-control" %>
</p>

<%end%>

<h1>Listing Books</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover ">
      <thead>
        <tr >

          <th class="text-center">Title</th>
          <th class="text-center">Author</th>
          <th class="text-center">Date of post</th>
          <th class="text-center">User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr class="text-center">
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.updated_at.strftime "%Y-%m-%d" %></td>
            <td><%= book.user_id %></td>
            <td><%= link_to 'Show', book, class:'btn btn-primary btn-sm' %></td>
            <%if can? :update, book %>
              <td><%= link_to 'Edit', edit_book_path(book), class:'btn btn-warning btn-sm' %></td>
            <% end %>
            <%if can? :destroy, book %>
              <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm' %></td>
            <% end %>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12"></div>
  </div>
  <div class="row">
    <div class="row">
      <div class="col-xs-4"></div>
      <div class="col-xs-4">
        <%= link_to 'New Book', new_book_path, class:'btn btn-success btn-lg' %>
        <%= link_to 'All books', books_path, class:'btn btn-primary btn-lg' %>
      </div>
      <div class="col-xs-4"></div>
    </div>
  </div>
</div>
